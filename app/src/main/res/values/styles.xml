<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">#7B1FA2</item>
        <item name="android:colorPrimaryDark">#6A1B9A</item>
        <item name="colorPrimary">#7B1FA2</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/primary_text_default_material_dark</item>
        <item name="colorControlActivated">@color/primary_text_default_material_dark</item>
        <item name="colorControlHighlight">@color/primary_text_default_material_dark</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">#2196F3</item>
    </style>

</resources>
