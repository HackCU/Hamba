<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.quickblox.sample.content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:name="com.quickblox.sample.content.App"
        android:label="@string/app_name"
        android:icon="@drawable/app_icon"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.quickblox.sample.content.activities.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.quickblox.sample.content.activities.GalleryActivity"
            android:label="@string/gallery_title"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.quickblox.sample.content.activities.ShowImageActivity"
            android:label="@string/show_image_title" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>