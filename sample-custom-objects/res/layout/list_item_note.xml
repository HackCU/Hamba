<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_node_height"
    android:background="@drawable/abc_list_selector_holo_light"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_node_height"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/note_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_small"
            android:text="@string/note"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/note_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/note_title_textview"
            android:paddingLeft="@dimen/margin_small"/>

        <TextView
            android:id="@+id/status_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note_title_textview"
            android:paddingLeft="@dimen/margin_small"
            android:text="@string/status"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note_textview"
            android:layout_toRightOf="@+id/status_title_textview"
            android:paddingLeft="@dimen/margin_small"/>

        <TextView
            android:id="@+id/date_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_title_textview"
            android:paddingLeft="@dimen/padding_small"
            android:text="@string/date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_textview"
            android:layout_toRightOf="@+id/date_title_textview"
            android:paddingLeft="@dimen/margin_small"/>

    </RelativeLayout>
</RelativeLayout>