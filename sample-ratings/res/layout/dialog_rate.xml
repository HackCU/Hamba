<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:padding="@dimen/padding_middle">

    <TextView
        android:id="@+id/dialog_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/padding_middle"
        android:text="@string/rate_this_film" />

    <RatingBar
        style="?android:attr/ratingBarStyle"
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_title_textview"
        android:orientation="horizontal"
        android:numStars="5"
        android:stepSize="1"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating_bar"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:padding="@dimen/padding_large"
        android:gravity="center">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:paddingRight="@dimen/padding_middle"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/rate_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:paddingLeft="@dimen/padding_middle"
            android:text="@string/rate" />

    </LinearLayout>
</RelativeLayout>